<Window x:Class="Drone_Service_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Drone_Service_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Client Name:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtClientName" Width="150"/>

            <!-- Add text boxes for other attributes -->

            <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                <TextBlock Text="Priority:" VerticalAlignment="Center"/>
                <RadioButton x:Name="rbStandard" Content="Standard" Margin="5,0"/>
                <RadioButton x:Name="rbExpress" Content="Express" Margin="5,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                <Button Content="Add" Click="AddButton_Click" Margin="0,0,5,0"/>
                <Button Content="Edit" Click="EditButton_Click" Margin="0,0,5,0"/>
                <Button Content="Delete" Click="DeleteButton_Click" Margin="0,0,5,0"/>
                <Button Content="Complete" Click="CompleteButton_Click" Margin="0,0,5,0"/>
                <Button Content="Client Paid" Click="ClientPaidButton_Click"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ListBox Grid.Column="0" x:Name="lstRegularQueue"
                     ItemsSource="{Binding RegularQueue}" Margin="0,20,10,0">
                <!-- List box template -->
            </ListBox>

            <ListBox Grid.Column="1" x:Name="lstExpressQueue"
                     ItemsSource="{Binding ExpressQueue}" Margin="0,20,10,0">
                <!-- List box template -->
            </ListBox>

            <ListBox Grid.Column="2" x:Name="lstFinishedJobs"
                     ItemsSource="{Binding CompletedWork}" Margin="0,20,0,0">
                <!-- List box template -->
            </ListBox>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <!-- Additional text boxes -->
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="10">
            <!-- Additional text boxes -->
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="10">
            <!-- Additional text boxes -->
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="10">
            <!-- Additional text boxes -->
        </StackPanel>
    </Grid>
</Window>